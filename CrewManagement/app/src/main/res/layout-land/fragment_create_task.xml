<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/createTaskLayout"
    tools:context=".ui.jobmanagement.fragment_CreateTask">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnNewTask"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/Create_Job"

            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnClearTaskForm"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="@+id/txtTaskDescription"
            app:layout_constraintTop_toBottomOf="@+id/txtTaskDescription"
            app:layout_constraintVertical_bias="0.18" />

        <Button
            android:id="@+id/btnClearTaskForm"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/Clear_Form"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/btnNewTask"
            app:layout_constraintEnd_toEndOf="@+id/txtTaskDescription"
            app:layout_constraintTop_toTopOf="@+id/btnNewTask"
            app:layout_constraintVertical_bias="0.17000002" />

        <EditText
            android:id="@+id/txtTaskDescription"
            android:layout_width="329dp"
            android:layout_height="119dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:hint="@string/job_duration_hint"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="250"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/jobList_taskView"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/jobList_taskView"
            android:layout_width="333dp"
            android:layout_height="413dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>