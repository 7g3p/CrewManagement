<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.jobmanagement.fragment_CreateJob">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lblJobSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Select_Job"
            android:textColor="#000000"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/spnr_jobChoice"
            app:layout_constraintStart_toStartOf="@+id/spnr_jobChoice"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblMemberSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Select_Member"
            android:textColor="#000000"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/spnr_MemberChoice"
            app:layout_constraintStart_toStartOf="@+id/spnr_MemberChoice"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spnr_jobChoice"
            android:layout_width="332dp"
            android:layout_height="32dp"
            android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spnr_MemberChoice"
            android:layout_width="369dp"
            android:layout_height="36dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAddMemberToJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="248dp"
            android:text="@string/addMemberToJob"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.293"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spnr_MemberChoice" />

        <Button
            android:id="@+id/btnClearForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="@string/Clear_Form"
            app:layout_constraintBottom_toBottomOf="@+id/btnAddMemberToJob"
            app:layout_constraintStart_toEndOf="@+id/btnAddMemberToJob"
            app:layout_constraintTop_toTopOf="@+id/btnAddMemberToJob" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>