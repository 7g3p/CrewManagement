<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.crewmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="Google Maps"
            android:parentActivityName=".Navigation">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".Navigation" />
        <activity android:name=".Navigation" />
        <activity android:name=".ChangePassword" />
        <activity android:name=".NewJob" />
        <activity android:name=".NewMember" />
        <activity android:name=".Administrator"
            android:label="Administrator"
            android:parentActivityName=".Navigation">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Navigation"></meta-data>
        </activity>

        <activity android:name=".MembersScreen"
            android:label="MembersScreen"
            android:parentActivityName=".Navigation">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Navigation"></meta-data>
        </activity>


        <activity android:name=".ProgressScreen"
            android:label="ProgressScreen"
            android:parentActivityName=".Navigation">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Navigation"></meta-data>
        </activity>
        <activity android:name=".Profile"
            android:label="Profile"
            android:parentActivityName=".Navigation">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Navigation"></meta-data>
        </activity>
        <activity android:name=".NewsFeed"
            android:label="NewsFeed"
            android:parentActivityName=".Navigation">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Navigation"></meta-data>
        </activity>
        <activity android:name=".JobAssignment"
            android:label="JobAssignment"
            android:parentActivityName=".Navigation">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Navigation"></meta-data>
        </activity>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>